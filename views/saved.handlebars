<div class="row w-100 mx-0">
    <div class="col-12 text-center py-4 px-0">
        <h1 class="display-5 w-100">
            Mongo Scraper <br>
            <small>Your saved articles</small>
        </h1>
    </div>
</div>
<div class="row mb-2 w-100 mx-0">
    <div class="col-12 text-center px-0">
        <button id="clearSaved" class="btn btn-danger">Clear Saved Articles</button>
    </div>
</div>
<div class="row w-100 mx-0">
    <div class="col-12">
        <div id="articleContainer" class="container">
            {{#if available}}
            {{#each articles}}
            <div id="article-{{@index}}" class="card mb-2">
                <div class="card-header">
                    <a id="title-{{@index}}" href="{{url}}">{{title}}</a>
                </div>
                <div class="card-body">
                    <div class="summary-{{@index}}">{{summary}}</div>
                    <div class="text-right">
                        <button data-which="{{@index}}" data-id="{{_id}}" class="noteBtn btn btn-info">Notes</button>
                        <button data-which="{{@index}}" data-id="{{_id}}" class="deleteBtn btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="card">
                <div class="card-body">
                    It seems there is nothing here, save some articles.
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notes for: <span id="notesId"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body px-0">
          <div id="addedNotes" class="px-3">

          </div>
          <hr class="w-100">
          <div class="px-3">
              <label for="noteInput">Add Note:</label>
              <div class="input-group mb-2">
                  <textarea class="form-control" name="note" id="noteInput" cols="30" rows="3"></textarea>
              </div>
              <div class="input-group">
                  <button id="noteSave" class="btn btn-primary ml-auto">Save</button>
              </div>
          </div>  
      </div>
    </div>
  </div>
</div>
<script src="/static/assets/js/savedScript.js"></script>